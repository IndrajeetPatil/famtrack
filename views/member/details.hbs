{{#with member}}

  <div class="container">

    <a href="/family/member" class="btn btn-light mb-3"><i class="fas fa-chevron-left"></i> Back To Family Members</a>

    <h1 class="text-center my-4">Family Member Profile</h1>

    <div class="row">

      <div class="col-md-4">
        {{#if publicId}}
          <img src="{{publicId}}" alt="Profile Picture" class="img-fluid rounded-circle mb-3" />
        {{else}}
          <img src="https://via.placeholder.com/200" alt="Profile Picture" class="img-fluid rounded-circle mb-3" />
        {{/if}}
      </div>

      <div class="col-md-8">

        <h2>{{firstName}} {{lastName}}</h2>
        <h3><strong>Relationship:</strong> {{relationship}}</h3>

        {{!-- more general solution, but not needed for nows
        {{#each this}}
          <p><strong>{{@key}}:</strong> {{this}}</p>
        {{/each}} 
        --}}

        {{! TODO: including only a few properties for now, but we can include all later }}

        <p><strong>Sex:</strong> {{sex}}</p>
        <p><strong>Birth Date:</strong> {{dateOfBirth}}</p>
        <p><strong>Birth Place:</strong> {{placeOfBirth}}</p>
        <p><strong>Death Date:</strong> {{dateOfDeath}}</p>
        <p><strong>Death Place:</strong> {{placeOfDeath}}</p>

      </div>

    </div>

  </div>

{{/with}}